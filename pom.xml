			<properties>
				<final.name>QA</final.name>
				<jdbc.url>jdbc:mysql://localhost:3306/scsdb?useUnicode=true&amp;amp;characterEncoding=utf8</jdbc.url>
				<jdbc.username>root</jdbc.username>
				<jdbc.password>1qaz!QAZ</jdbc.password>
			</properties>
